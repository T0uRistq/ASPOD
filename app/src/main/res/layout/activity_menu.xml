<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/send_report"
        android:enabled="false"
        android:onClick="sendReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отправить отчет"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/continue_report"
        android:enabled="false"
        android:onClick="continueReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Продолжить отчет"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_report" />

    <Button
        android:id="@+id/start_report"
        android:onClick="startReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новый отчет"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continue_report" />

</androidx.constraintlayout.widget.ConstraintLayout>